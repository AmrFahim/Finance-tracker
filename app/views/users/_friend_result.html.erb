<div class=" res-block">
  <%= render 'layouts/messages' %>
</div>

<% if @friends %>
  <div class="card card-header  res-block">
    <table class="col-md-12">
      <tbody>
        <% @friends.each do |friend| %>
          <tr>
            <td> <strong>Name: </strong> <%= friend.full_name %></td>
            <td> <strong>Email: </strong> <%= friend.email %></td>
            <td> <%= link_to 'View Profile', user_path(friend) , class: "btn btn-sm btn-info"%>
              <% if current_user.not_friend_with?(friend.id) %>
                <%= link_to 'Follow friend?', friendships_path(friend: friend), class: "btn btn-sm btn-success", method: :post %> 
              <% else %>
                <span class="badge badge-secondary"> You are friends </span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %> 