<h2>User Details </h2>

<div class=" res-block">
  <%= render 'layouts/messages' %>
</div>
<div class="card card-header  res-block">
  <table class="col-md-12">
    <tbody>
      <tr>
        <td> <strong>Name: </strong> <%= @user.full_name %></td>
        <td> <strong>Email: </strong> <%= @user.email %></td>
        <td> 
          <% if current_user.not_friend_with?(@user.id) %>
            <%= link_to 'Follow friend?', friendships_path(friend: @user), class: "btn btn-sm btn-success", method: :post %> 
          <% else %>
            <span class="badge badge-secondary"> You are friends </span>
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>
</div>

<% if !@tracked_stocks.empty? %>
  <%= render 'stocks/list'%>
<%else %>
  <p class="lead"> This user are not tracking any stocks </p>
<%end%>

